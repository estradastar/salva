<div class="row">
<label for="login" class="label"><%= get_label('login') %> <span class="required">*</span></label>
<%= text_field 'edit', 'login', 'size' => 30, 'maxsize'=> 40, 'tabindex'=> 1, 'id' => 'login' %>
</div>

<div class="row">
<label for="passwd" class="label"><%= get_label('passwd') %> <span class="required">*</span></label>
<%= password_field 'edit', 'passwd', 'size' => 15, 'maxsize'=>
 30,'tabindex' => 2, 'id' => 'edit_passwd', 'z:required' => 'true',
 'z:message' => 'Este campo es requerido'
 %>
</div>

<div class="row">
<label for="passwd" class="label"><%= get_label('passwd') %> <span class="required">*</span></label>
<%= password_field 'edit', 'passwd_confirmation', 'size' => 15,
'maxsize'=>  30,'tabindex' => 2, 'id' => 'edit_passwdconfirmation',
'z:required' => 'true',  'z:message' => 'Este campo es requerido'
 %>
</div>
</div>

