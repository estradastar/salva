<%= render :partial => 'operations' %>
<hr/>
<img src="<%= url_for(:controller => 'person', :action => "photo") %>"/>
<%= render :partial => 'table_of_content' %>
<br/>

<!-- body -->
<% index = 0 %>
<% for hash in @data %>
<% if hash[:level] == 1 %>
<div class="section">
<% end %>
<%= internal_link(hash[:title]) %> <%= header(get_label(hash[:title]), hash[:level], 'html') %>
<%= paragraph_data(hash[:data]) if hash.has_key?(:data) %>
<% index +=1 %>
<% if @data[index].nil? or @data[index][:level] == 1%>
<span class="back"> <%= link_to_internal('toc', 'Índice', "back_top.gif") %>  </span>
</div>
<% end %>
<% end -%>
<%= render :partial => 'operations' %>
<!-- end for body -->
