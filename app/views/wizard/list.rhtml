<%= link_to 'Modificar todos', :action => 'edit_multi' %>

<p>
<% 
   current = 0
   for row in @cancel 
%>
<% @edit = row %>
  <%= @edit.class.name %> <%= link_to 'Modificar', :action => 'edit', :current => current %>
  <br/>
  <%= render :partial => Inflector.underscore(@edit.class.name)+'/show' %>
  <br/>
  <% if current > 0 %>
  <%= @edit.class.name %> <%= link_to 'Agregar: '+@edit.class.name,
   :action => 'add', :current => current %> 
   <br/>
   <br/>
  <% end %>
<% 
  current += 1
  end 
%>

<table width="100%">
<tr>
<td align="left">
<%= link_to 'Guardar', :action => 'finalize' %>
</td>
<td align="right">
<%= link_to 'Cancelar', :action => 'cancel' %>
</td>
</tr>
</table>

