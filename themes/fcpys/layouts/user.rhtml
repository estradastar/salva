<body>

<div id="head">
<a href="<%= get_conf('institution_url') %>" target="_new"> <%= get_conf('institution') %></a>
</div>

<div id="container"> 
<div id="maintopbar"> <!-- topbar: background for the options and -->
<!-- tools bars -->
